<%= form_tag sessions_path do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="form-group">
    <%= submit_tag "Complete Sign In", class: "btn btn-success" %>
  </div>
<% end %>
