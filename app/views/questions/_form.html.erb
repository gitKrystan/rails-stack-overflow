<div class="col-md-6 col-center">
  <%= render 'layouts/errors', object: @question %>
  <%= form_for @question do |f| %>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit "Ask the Internet", class: "btn btn-success" %>
  </div>
  <% end %>
</div>
