<!DOCTYPE html>
<html>
<head>
  <title>StackOverflow</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if current_user %>
  <%= current_user.name %>
  <%= link_to 'Sign Out', signout_sessions_path %>
<% else %>
  <%= link_to 'Sign Up', signup_users_path %>
  <%= link_to 'Sign In', signin_sessions_path %>
<% end %>
<%= link_to "Ask a Question", new_question_path %>
<%= flash[:alert] %>
<%= flash[:notice] %>
<%= yield %>

</body>
</html>
